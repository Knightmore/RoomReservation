@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model string

@{
    ViewData["Title"] = Localizer["Forgot Password"];
}

<div class="card bg-secondary mb-3 m-auto" style="max-width: 330px">
    <div class="card-header text-center text-white">@Localizer["Forgot Password"]</div>

    <div class="card-body bg-light text-center">
        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mt-3">
                <input name="email" type="email" class="form-control" placeholder="E-Mail"/>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="@Localizer["Submit"]" class="btn btn-primary"/>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">@Localizer["Cancel"]</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}